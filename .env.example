# Database Configuration (for docker-compose.yml)
POSTGRES_USER=habitpilot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=habitpilot_db
POSTGRES_PORT=5432

# Database Connection URL (for Next.js app)
