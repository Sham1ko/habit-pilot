DATABASE_URL=postgresql://habitpilot:your_secure_password_here@localhost:5432/habitpilot_db

# Application Configuration
NODE_ENV=development
PORT=3000

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
